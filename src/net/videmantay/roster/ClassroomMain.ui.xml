<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel styleName="classroom" ui:field="classroom">
			<!-- NavBar -->
			<m:MaterialNavBar activates="sideNav" backgroundColor="green" type="TALL">
			<m:html.Div>
				<m:html.Span text="Roster Title" fontSize="3.5em"/>
			</m:html.Div>
			</m:MaterialNavBar>
			<!-- SideNav -->
			<m:MaterialSideNav type="CLIP" m:id="sideNav"
				closeOnClick="true">
				<m:html.Div m:id="profile">
					<m:MaterialImage></m:MaterialImage>
				</m:html.Div>
				<m:MaterialLink ui:field="studentLink" text="Students" textColor="green" iconType="CLASS" />
				<m:MaterialLink ui:field="assignmentLink" text="Assignments" textColor="orange" iconType="EVENT" />
				<m:MaterialLink ui:field="groupLink" text="Groups" textColor="light-green darken-4"
					iconType="MY_LIBRARY_BOOKS"/>
				<m:MaterialLink ui:field="lessonPlanLink" text="Lesson Plans" textColor="amber darken-4"
					iconType="CONTENT_PASTE" />
				<m:MaterialLink ui:field="incidentLink" text="Incidents" textColor="green"
					iconType="SETTINGS" />
				<m:MaterialLink ui:field="goalLink" text="Goals" textColor="green" iconType="CLASS" />
				<m:MaterialLink ui:field="jobLink" text="Jobs" textColor="green" iconType="CLASS" />
			</m:MaterialSideNav>
		<m:MaterialContainer m:id="mainPanel" ui:field="mainPanel" width="100%" height="100%" >
		</m:MaterialContainer>
	</g:HTMLPanel>
</ui:UiBinder> 