<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:h="urn:import:gwt.material.design.client.ui.html">
	<g:HTMLPanel styleName="classroom" ui:field="classroom">
			<m:MaterialNavBar activates="sideNav" backgroundColor="green">
			
			<m:MaterialNavBrand  ui:field="rosterTitle" textAlign="CENTER"/>
			
			<m:MaterialNavSection textAlign="CENTER" float="RIGHT" marginRight="11.5">
				<m:MaterialAnchorButton ui:field="classtimeBtn"   text="Class Time" activates="classtime"/>
					<m:MaterialDropDown activator="classtime" ui:field="classtimeDrop">
				<m:MaterialLink text="First Link" />
				<m:MaterialLink text="Second Title" />
			</m:MaterialDropDown>
			</m:MaterialNavSection>
			</m:MaterialNavBar>
			<h:Div padding="5" marginBottom="-3" backgroundColor="green" hideOn="HIDE_ON_LARGE" textColor="white">
				<m:MaterialAnchorButton width="100%" text="Class Time"  textAlign="CENTER" iconType="ARROW_DROP_DOWN" iconPosition="RIGHT" activates="classtime2"/>
				<m:MaterialDropDown activator="classtime2" ui:field="classtimeDrop2">
				<m:MaterialLink text="First Link" />
				<m:MaterialLink text="Second Title" />
			</m:MaterialDropDown>
			</h:Div>
		
			<m:MaterialSideNav type="CLIP" m:id="sideNav" closeOnClick="true">
				<m:html.Div m:id="profile">
					<m:MaterialImage></m:MaterialImage>
				</m:html.Div>
				<m:MaterialLink ui:field="studentLink" text="Students" textColor="green" iconType="CLASS" />
				<m:MaterialLink ui:field="assignmentLink" text="Assignments" textColor="orange" iconType="EVENT" />
				<m:MaterialLink ui:field="groupLink" text="Groups" textColor="light-green darken-4"
					iconType="MY_LIBRARY_BOOKS"/>
				<m:MaterialLink ui:field="lessonPlanLink" text="Lesson Plans" textColor="amber darken-4"
					iconType="CONTENT_PASTE" />
				<m:MaterialLink ui:field="incidentLink" text="Incidents" textColor="green"
					iconType="SETTINGS" />
				<m:MaterialLink ui:field="goalLink" text="Goals" textColor="green" iconType="CLASS" />
				<m:MaterialLink ui:field="jobLink" text="Jobs" textColor="green" iconType="CLASS" />
			</m:MaterialSideNav>
		<m:MaterialContainer  ui:field="mainPanel" width="100%" height="100%" >
		</m:MaterialContainer>
	</g:HTMLPanel>
</ui:UiBinder> 