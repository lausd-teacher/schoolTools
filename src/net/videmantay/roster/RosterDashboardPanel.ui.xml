<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<m:MaterialTab ui:field="tab" backgroundColor="green darken-4" indicatorColor="orange accent-4" height="2.5em" >
			<m:MaterialTabItem addStyleNames="myTab"><m:MaterialAnchorButton type="FLAT" href="#tab1" text="Dashboard" textColor="white" waves="ORANGE"/></m:MaterialTabItem>
			<m:MaterialTabItem addStyleNames="myTab"><m:MaterialAnchorButton type="FLAT" href="#tab2" text="Calendar" textColor="white" waves="ORANGE"/></m:MaterialTabItem>
			<m:MaterialTabItem addStyleNames="myTab"><m:MaterialAnchorButton type="FLAT" href="#tab3" text="Reports" textColor="white" waves="ORANGE"/></m:MaterialTabItem>
		</m:MaterialTab>
		<div  id="tab1">
			<m:MaterialRow backgroundColor="green accent-3" textColor="green darken-4" paddingLeft="10" centerOn="CENTER_ON_SMALL">
			<m:MaterialColumn  grid="l4" hideOn="HIDE_ON_MED_DOWN" float="RIGHT">
				<g:HorizontalPanel>
					<m:MaterialLabel text="Grid" />
					<m:MaterialSwitch ui:field="gridSwitch" ></m:MaterialSwitch>
					<m:MaterialLabel text="Seating Chart" />
					<m:MaterialAnchorButton ui:field="seatingChartSettingBtn" type="FLAT" activates="seatingChartOpts" iconType="SETTINGS"/>
				</g:HorizontalPanel>
				<m:MaterialDropDown activator="seatingChartOpts">
					<m:MaterialLink ui:field="furnitureSetLink"  text="Seats"/>
					<m:MaterialLink ui:field="studentSetLink"  text="Students"/>
					<m:MaterialLink ui:field="printChartLink"  text="print chart"/>
				</m:MaterialDropDown>
				</m:MaterialColumn>
			<m:MaterialColumn grid="s12 m12 l8" float="LEFT">
				<m:MaterialColumn grid="s2">
					<m:MaterialPanel textColor="green" paddingTop="11">
						<g:HTMLPanel> 
							<m:MaterialIcon iconType="ASSIGNMENT_IND"/>
							<br/><m:MaterialLabel hideOn="HIDE_ON_SMALL" text="Roll"/>
						</g:HTMLPanel>
					</m:MaterialPanel>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s2">
				<m:MaterialPanel textColor="green"  paddingTop="11" > 
						<g:HTMLPanel> 
							<m:MaterialIcon iconType="PLAYLIST_ADD_CHECK"/>
							<br/><m:MaterialLabel hideOn="HIDE_ON_SMALL" text="Homework" />
						</g:HTMLPanel>
				</m:MaterialPanel>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s2">
					<m:MaterialPanel textColor="green" paddingTop="11"><!--  -->
						<g:HTMLPanel> 
							<m:MaterialIcon iconType="GROUP_WORK"/><br/>
							<m:MaterialLabel hideOn="HIDE_ON_SMALL" text="Group" />
						</g:HTMLPanel>
					</m:MaterialPanel>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s2">
					<m:MaterialPanel textColor="green"  paddingTop="11"><!--  -->
						<g:HTMLPanel> 
							<m:MaterialIcon iconType="SHUFFLE"/>
							<br/> <m:MaterialLabel hideOn="HIDE_ON_SMALL" text="Random"/>
						</g:HTMLPanel>
					</m:MaterialPanel>
			</m:MaterialColumn>
			<m:MaterialColumn grid="s2">
					<m:MaterialPanel textColor="green"  paddingTop="11"><!--  -->
						<g:HTMLPanel>
							<m:MaterialIcon iconType="SELECT_ALL"/>
							<br/><m:MaterialLabel hideOn="HIDE_ON_SMALL" text="Select All" />
						</g:HTMLPanel>
					</m:MaterialPanel>
				</m:MaterialColumn>
				</m:MaterialColumn>
			</m:MaterialRow>
		</div>
		<div id="tab2">
			<h2>TAB 2</h2>
		</div>
		<div  id="tab3">
			<h2>TAB 3</h2>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 