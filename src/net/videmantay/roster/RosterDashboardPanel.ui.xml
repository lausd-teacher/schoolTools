<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:h="urn:import:gwt.material.design.client.ui.html">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel height="100%" width="100%">
		<m:MaterialTab ui:field="tab" backgroundColor="green darken-4" indicatorColor="orange accent-4" height="2.5em" >
			<m:MaterialTabItem addStyleNames="myTab"><m:MaterialAnchorButton type="FLAT" href="#tab1" text="Dashboard" textColor="white" waves="ORANGE"/></m:MaterialTabItem>
			<m:MaterialTabItem addStyleNames="myTab"><m:MaterialAnchorButton type="FLAT" href="#tab2" text="Calendar" textColor="white" waves="ORANGE"/></m:MaterialTabItem>
			<m:MaterialTabItem addStyleNames="myTab"><m:MaterialAnchorButton type="FLAT" href="#tab3" text="Reports" textColor="white" waves="ORANGE"/></m:MaterialTabItem>
		</m:MaterialTab>
		<div  id="tab1">
			<m:MaterialRow ui:field="toolbar" height="3em" backgroundColor="green accent-3" textColor="green darken-4" paddingLeft="10" centerOn="CENTER_ON_SMALL">
			
				<m:MaterialAnchorButton ui:field="classtimeBtn" addStyleNames="classTimeBtn" float="RIGHT" text="Class Time" fontSize="1.10em"  marginRight="5.0" textAlign="CENTER" iconType="ARROW_DROP_DOWN" iconSize="MEDIUM" iconPosition="RIGHT" activates="classtime"/>
				<m:MaterialDropDown activator="classtime" ui:field="classtimeDrop">
					<m:MaterialLink text="Manage..." />
				</m:MaterialDropDown>
			<m:MaterialColumn  grid="l3" hideOn="HIDE_ON_MED_DOWN" float="LEFT">
				<m:MaterialRow>
					<m:MaterialColumn grid="l1">
					<m:MaterialLabel text="Grid" paddingRight="3.0"/>
					</m:MaterialColumn>
					<m:MaterialColumn grid="l3">
					<m:MaterialSwitch ui:field="gridSwitch"></m:MaterialSwitch>
					</m:MaterialColumn>
					<m:MaterialColumn grid="l3">
					<m:MaterialLabel text="Seating Chart" paddingLeft="7.5" />
					</m:MaterialColumn>
					<m:MaterialColumn>
						<m:MaterialIcon ui:field="seatingChartEditIcon" iconType="EDIT" activates="seatingChartEdit" />
						<m:MaterialDropDown activator="seatingChartEdit">
							<m:MaterialLink ui:field="manageFurnitureLink" text="Manage Furntirue"/>
							<m:MaterialLink ui:field="arrangeStudentsLink" text="Arrange Students" />
							<m:MaterialLink ui:field="manageStationsLink" text="Manage Stations" />
						</m:MaterialDropDown>
					</m:MaterialColumn>
				</m:MaterialRow><!--  -->
				</m:MaterialColumn>
			<m:MaterialColumn grid="s6 m6 l6">
				<m:MaterialColumn grid="s2 m2 l1">
					<m:MaterialPanel  paddingTop="12">
						<g:HTMLPanel>
							<m:MaterialTooltip  text="Roll">
							<m:MaterialIcon iconType="ASSIGNMENT_IND" iconSize="SMALL"/>
							</m:MaterialTooltip>
						</g:HTMLPanel>
					</m:MaterialPanel>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s2 m2 l1">
				<m:MaterialPanel  paddingTop="12" > 
						<g:HTMLPanel> 
						<m:MaterialTooltip text="Homework">
							<m:MaterialIcon ui:field="hwBtn" iconType="PLAYLIST_ADD_CHECK" iconSize="SMALL"/>
							</m:MaterialTooltip>
						</g:HTMLPanel>
				</m:MaterialPanel>
				</m:MaterialColumn >
				<m:MaterialColumn grid="s2 m2 l1">
					<m:MaterialPanel  paddingTop="12"><!--  -->
						<g:HTMLPanel> 
						<m:MaterialTooltip text="Groups">
							<m:MaterialIcon iconType="GROUP_WORK" iconSize="SMALL"/>
						</m:MaterialTooltip>	
						</g:HTMLPanel>
					</m:MaterialPanel>
				</m:MaterialColumn>
				<m:MaterialColumn grid="s2 m2 l1">
					<m:MaterialPanel  paddingTop="12"><!--  -->
						<g:HTMLPanel> 
						<m:MaterialTooltip text="Random">
							<m:MaterialIcon iconType="SHUFFLE" iconSize="SMALL"/>
						</m:MaterialTooltip>
						</g:HTMLPanel>
					</m:MaterialPanel>
			</m:MaterialColumn>
				<m:MaterialColumn grid="s2 m2 l1">
					<m:MaterialPanel  paddingTop="12"><!--  -->
						<g:HTMLPanel>
						<m:MaterialTooltip text="Multiple">
							<m:MaterialIcon iconType="GROUP_ADD" iconSize="SMALL"/>
							</m:MaterialTooltip>
						</g:HTMLPanel>
					</m:MaterialPanel>
				</m:MaterialColumn>
				</m:MaterialColumn>
			</m:MaterialRow>
			<m:MaterialRow ui:field="doneToolbar"> 
				<m:MaterialColumn>
					<m:MaterialAnchorButton addStyleNames="doneBtn" ui:field="doneBtn" text="DONE"></m:MaterialAnchorButton>
				</m:MaterialColumn>
			</m:MaterialRow>
			<g:HTMLPanel ui:field="tab1Main">
			</g:HTMLPanel>
		</div>
		<div id="tab2">
			<h2>TAB 2</h2>
		</div>
		<div  id="tab3">
			<h2>TAB 3</h2>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 