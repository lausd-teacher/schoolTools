<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:v="urn:import:net.videmantay.roster">
	<g:HTMLPanel>
	<m:MaterialCard>
		<m:MaterialCardContent>
		<v:RosterGrid ui:field="rosterGrid" />
		<v:RosterForm ui:field="rosterForm"/>
		</m:MaterialCardContent>
	</m:MaterialCard>
	<!-- FAB -->
		<m:MaterialFAB>
			<m:MaterialTooltip text="Create" position="LEFT">
				<m:MaterialButton ui:field="fab" type="FLOATING"
					backgroundColor="green darken-4" iconType="ADD" size="LARGE" />
			</m:MaterialTooltip>
		</m:MaterialFAB>
	</g:HTMLPanel>
</ui:UiBinder> 