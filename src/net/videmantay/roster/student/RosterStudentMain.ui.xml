<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:v="urn:import:net.videmantay.roster.student">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
	<m:MaterialCard>
	<m:MaterialCardTitle text="Student List" />
	<m:MaterialCardContent>
		<m:MaterialRow>
			<m:MaterialColumn ui:field="studentContent">
			<g:HTMLPanel ui:field="emptyStudentList">
				<h3>You List Appears To Be Empty...</h3>
				<div>It appears that you have no registered students
				or maybe you have just registered one. In case of the latter just 
				refresh your screen , otherwise use the bottom button to begin
				registering student for this class.</div>
			</g:HTMLPanel>
				<m:MaterialCollection ui:field="studentCollection" />
			</m:MaterialColumn>	
		</m:MaterialRow>
		</m:MaterialCardContent>
		</m:MaterialCard>
		<!-- FAB -->
		<m:MaterialFAB>
			<m:MaterialTooltip text="New Student" position="LEFT">
				<m:MaterialButton ui:field="fab" type="FLOATING"
					backgroundColor="green darken-4" iconType="ADD" size="LARGE" />
			</m:MaterialTooltip>
		</m:MaterialFAB>
		<v:CreateStudentForm ui:field="stuForm"></v:CreateStudentForm>
	</g:HTMLPanel>
</ui:UiBinder> 