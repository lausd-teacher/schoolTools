<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">
	<g:HTMLPanel>
		<m:MaterialRow>
			<m:MaterialColumn>
				<m:MaterialCard>
					<m:MaterialCardContent>
						<g:HTMLPanel>
							<m:MaterialCard ui:field="studentProfPanel"> 
								<m:MaterialCardContent>
									<g:HTMLPanel >
										<m:MaterialAnchorButton type="FLAT"
											activates="studentmore" ui:field="studentEditIcon" iconType="MORE_VERT" />
										<m:MaterialDropDown activator="studentmore">
											<m:MaterialLink text="Edit" iconType="EDIT" />
											<m:MaterialLink text="Delte" iconType="REMOVE" />
											<m:MaterialLink ui:field="activeStudentLink" />
										</m:MaterialDropDown>
										<m:html.Hr />
										<table>
											<tbody>
												<tr>
													<th>
														<m:MaterialImage ui:field="stuImage" />
													</th>
												</tr>
												<tr>
													<td>
														<div>
															<span ui:field="firstName"></span>
															<br />
															<span ui:field="lastName" />
															<br />
															<span ui:field="extName" />
															<br />
															<span ui:field="DOB" />
															<br />
														</div>
													</td>
												</tr>
												<tr><!-- summary -->
													<td> 
														<div ui:field="studentSummaryPanel"> 
															<m:MaterialLabel text="Summary"/>
															<span ui:field="summary"></span>
														</div>
													</td>
												</tr>
											</tbody>
										</table>
										<m:html.Hr />
									</g:HTMLPanel>
								</m:MaterialCardContent>
							</m:MaterialCard>
							<br />
								
						</g:HTMLPanel>
					</m:MaterialCardContent>
				</m:MaterialCard>
			</m:MaterialColumn>
			<m:MaterialColumn>
				<!-- Alphabetize the row for easy -->
				<m:MaterialRow ui:field="assignmentRow">
					<m:MaterialPanel>
						<m:MaterialCard>
							<m:MaterialCardTitle text="Assignments" iconType="ASSIGNMENT"></m:MaterialCardTitle>
							<m:MaterialCardContent></m:MaterialCardContent>
						</m:MaterialCard>
					</m:MaterialPanel>
				</m:MaterialRow>
				<m:MaterialRow ui:field="attendanceRow">
					<m:MaterialPanel>
						<m:MaterialCard>
							<m:MaterialCardTitle text="Attendance"
								iconType="ASSIGNMENT_IND">
							</m:MaterialCardTitle>
							<m:MaterialCardContent></m:MaterialCardContent>
						</m:MaterialCard>
					</m:MaterialPanel>
				</m:MaterialRow>
				<m:MaterialRow ui:field="incidentRow">
					<m:MaterialPanel>
						<m:MaterialCard>
							<m:MaterialCardTitle text="Incidents" iconType="FEEDBACK"></m:MaterialCardTitle>
							<m:MaterialCardContent></m:MaterialCardContent>
						</m:MaterialCard>
					</m:MaterialPanel>
				</m:MaterialRow>
				<m:MaterialRow ui:field="goalRow">
					<m:MaterialPanel>
						<m:MaterialCard>
							<m:MaterialCardTitle text="Goals" iconType="TRENDING_UP"></m:MaterialCardTitle>
							<m:MaterialCardContent></m:MaterialCardContent>
						</m:MaterialCard>
					</m:MaterialPanel>
				</m:MaterialRow>
				<m:MaterialRow ui:field="groupRow">
					<m:MaterialPanel>
						<m:MaterialCard>
							<m:MaterialCardTitle text="Groups" iconType="GROUP">
							</m:MaterialCardTitle>
							<m:MaterialCardContent></m:MaterialCardContent>
						</m:MaterialCard>
					</m:MaterialPanel>
				</m:MaterialRow>
				<m:MaterialRow ui:field="jobRow">
					<m:MaterialPanel>
						<m:MaterialCard>
							<m:MaterialCardTitle text="Jobs" iconType="BUSINESS_CENTER"></m:MaterialCardTitle>
							<m:MaterialCardContent></m:MaterialCardContent>
						</m:MaterialCard>
					</m:MaterialPanel>
				</m:MaterialRow>
			</m:MaterialColumn>
		</m:MaterialRow>
	</g:HTMLPanel>
</ui:UiBinder> 