<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:h="urn:import:gwt.material.design.client.ui.html" xmlns:o="urn:import:gwt.material.design.addins.client.overlay">
	<ui:style>
		.scStudentTools {
		overflow-x: hidden;
		height: 100%;
		width: 10em;
		position: relative;
		left: -2em;
		}

		.scStudentList {
		overflow-y: scroll;
		height: 75%;
		width:100%;
		}

		.seatingChart {
		width: 1090px;
		height: 650px;
		display: block;
		position: relative;
		margin-left: auto;
		margin-right: auto;
		margin-bottom: 1em;
		}
		.stationLayer {
		height: 700px;
		background-color:transparent;
		position: relative;
		left:-0.75em;
		margin-bottom:0.5em;
		display:none;
		}

		.floorPlan {
		height: 700px;
		background-image: url('../img/classFloor.svg');
		background-color:White;
		border-radius: 5%;
		border: 0.1em dotted Brown;
		position: relative;
		left:-0.75em;
		margin-bottom:0.5em;
		box-shadow:2px 2px
		5px DimGray;
		}

		.seatingChartToolbar {
		display: none;
		position: relative;
		}

		.editTools {
		display: none;
		position: relative;
		}
	</ui:style>
	<g:HTMLPanel ui:field="seatingChart" styleName="{style.seatingChart}">
		<m:MaterialRow ui:field="seatingChartToolbar"
			backgroundColor="RED_LIGHTEN_1" addStyleNames="{style.seatingChartToolbar}">
			<m:MaterialColumn grid="s2">
				<m:MaterialAnchorButton ui:field="undoBtn" text="UNDO"
					iconType="REPLY" />
			</m:MaterialColumn>
			<!-- This cancel button must be accessible to classroomdashboard -->
			<m:MaterialColumn grid="s2">
				<m:MaterialAnchorButton ui:field="cancelBtn" text="CANCEL"
					iconType="CLOSE" />
			</m:MaterialColumn>
			<m:MaterialColumn grid="s2">
				<!-- This done button must be accessible to classroomdashboard -->
				<m:MaterialAnchorButton ui:field="doneBtn" text="DONE"
					iconType="DONE" />
			</m:MaterialColumn>
			<m:MaterialColumn grid="s6" float="RIGHT" marginRight="10.0">
				<m:MaterialButton text="Furniture" ui:field="stateSelectBtn" fontSize="1em"
					activates="scStateSelect" iconType="EVENT_SEAT" iconPosition="RIGHT"
					width="180px" />
				<m:MaterialDropDown ui:field="scDropDown"
					activator="scStateSelect">
					<m:MaterialLink text="Students" iconType="SCHOOL"
						iconPosition="RIGHT" />
					<m:MaterialLink text="Groups" iconType="GROUP_WORK"
						iconPosition="RIGHT" />
					<m:MaterialLink text="Furniture" iconType="EVENT_SEAT"
						iconPosition="RIGHT" />
					<m:MaterialLink text="Stations" iconType="WIDGETS"
						iconPosition="RIGHT" />
				</m:MaterialDropDown>
			</m:MaterialColumn>
		</m:MaterialRow>
		<m:MaterialRow>
			<m:MaterialColumn grid="l10">
				<g:HTMLPanel ui:field="floorPlanWrapper">
					<div ui:field="stationLayer" class="{style.stationLayer}"></div>
					<div ui:field="floorPlan" class="{style.floorPlan}"></div>
				</g:HTMLPanel>
			</m:MaterialColumn>
			<m:MaterialColumn grid="l2">
				<g:HTMLPanel addStyleNames="{style.scStudentTools}">
					<div ui:field="homeTools">
						<m:MaterialLabel text="Students" textColor="RED_DARKEN_2" />
						<m:MaterialCollection ui:field="studentList"
							addStyleNames="scStudentList" />
					</div>
					<div ui:field="editTools" class="{style.editTools}">
							<div ui:field="editFurniturePanel">
									<m:MaterialCollection>
										<m:MaterialCollectionItem>
											<m:MaterialImage url="../img/doubleDesk.png"
												addStyleNames="furnitureIcon" m:id="doubleDeskIcon" />
										</m:MaterialCollectionItem>
										<m:MaterialCollectionItem>
											<m:MaterialImage url="../img/singleDesk.png"
												addStyleNames="furnitureIcon" m:id="singleDeskIcon" />
										</m:MaterialCollectionItem>
									</m:MaterialCollection>
								</div>
								<div ui:field="editStudentsPanel">
									<g:HTMLPanel ui:field="editStudentEmptyMessage">
										<h5>No Students to show</h5>
									</g:HTMLPanel>
									<span ui:field="editStudentSpan" ></span>
								</div>
								<div ui:field="editGroupsPanel">
									<g:HTMLPanel>
										<h5>No groups created </h5>
									</g:HTMLPanel>
								</div>
								<div ui:field="editStationPanel">
									<g:HTMLPanel>
										<h5>No stations created</h5>
									</g:HTMLPanel>
									<m:MaterialCollection></m:MaterialCollection>
								</div>
					</div>
				</g:HTMLPanel>
			</m:MaterialColumn>
		</m:MaterialRow>
	</g:HTMLPanel>
</ui:UiBinder> 