<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:v="urn:import:net.videmantay.roster">
	<ui:style>
	
	</ui:style>
	<m:MaterialPanel>
	<m:html.Div backgroundColor="RED_DARKEN_2" padding="5" shadow="1" width="100%" height="4.5em"> 
		<m:MaterialLabel text="Routinely"  marginLeft="10.0"  textColor="WHITE" fontSize="2.5em"/>
	</m:html.Div>
		<m:MaterialLabel text="Rosters" fontSize="2em" padding="10.0" marginLeft="5"/>
		<v:RosterGrid ui:field="grid"/>
		<v:RosterForm  ui:field="form" visible="false"></v:RosterForm>
		<m:MaterialFAB ui:field="FAB"> 
			<m:MaterialButton type="FLOATING" iconType="LIST" backgroundColor="RED_DARKEN_2" size="LARGE" />
		</m:MaterialFAB>
		<m:MaterialModal ui:field="deleteRosterModal" type="FIXED_FOOTER" dismissible="true"> 
			<m:MaterialModalContent> 
				<m:MaterialTitle title="Are you sure you want to delete this Roster?" 
				                 description="Once it is done you will not be able to retrieve your roster back!" float="LEFT" width="60%"/>
				<m:MaterialIcon width="35%" iconType="WARNING" float="RIGHT" size="LARGE"/>
			</m:MaterialModalContent>
			<m:MaterialModalFooter> 
				<m:MaterialAnchorButton ui:field="deleteOkBtn" text="DELETE" ></m:MaterialAnchorButton>
				<m:MaterialAnchorButton ui:field="deleteCancelBtn"  text="CANCEL"></m:MaterialAnchorButton>
			</m:MaterialModalFooter>
		</m:MaterialModal>
	</m:MaterialPanel>
</ui:UiBinder> 